<p id="notice"><%= notice %></p>

<h1>Listing Clusters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Team</th>
      <th>Users</th>
      <th>Lease</th>
      <th>Available?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clusters.each do |cluster| %>
      <tr>
        <td><%= cluster.name %></td>
        <td><%= Type.find_by_id(cluster.type_id).name %></td>
        <td><%= Team.find_by_id(cluster.team_id).name %></td>
        <td><%= cluster.users.map(&:name).join(",") %></td>
        <td><%= cluster.lease %></td>
        <td><%= cluster.available %></td>
        <td><%= link_to 'Show', cluster %></td>
        <td><%= link_to 'Edit', edit_cluster_path(cluster) %></td>
        <td><%= link_to 'Destroy', cluster, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

